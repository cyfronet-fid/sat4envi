  {
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "MSG.metadata.v1.json",
  "title": "MSG_Products.metadata.v1",
  "description": "Schema for MSG products metadata",
  "required": [
    "spacecraft",
    "product_type",
    "sensor_mode",
    "processing_level",
    "sensing_time",
    "polygon",
    "format",
    "schema"
  ],
  "type": "object",
  "properties": {
    "spacecraft": {
      "type": "string"
    },
    "product_type": {
      "type": "string",
      "pattern": "^[-_a-zA-Z0-9]+$"
    },
    "sensor_mode": {
      "type": "string"
    },
    "processing_level": {
      "type": "string"
    },
    "sensing_time": {
      "type": "string",
      "format": "date-time"
    },
    "polygon": {
      "type": "string",
      "pattern": "^(-?\\d+(\\.\\d+)?,-?\\d+(\\.\\d+)?)( -?\\d+(\\.\\d+)?,-?\\d+(\\.\\d+)?)+$"
    },
    "format": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    }
  }
}
